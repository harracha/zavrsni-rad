// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  teacherId      String      @id @default(cuid())
  firstName      String
  lastName       String
  email          String      @unique
  password       String
  profilePicture String?
  Role           SystemRole  @default(PROFESSOR)
  classGroup     classGroup?
  labGroup       labGroup?

  @@index([teacherId])
  @@index([email])
}

model Student {
  studentId      String     @id @default(cuid())
  firstName      String
  lastName       String
  email          String     @unique
  password       String
  JMBAG          String     @unique
  acYear         String?
  profilePicture String?
  Role           SystemRole @default(STUDENT)
  classGroupId   String     @unique
  classGroup     classGroup @relation(fields: [classGroupId], references: [groupId])
  labGroupId     String     @unique
  labGroup       labGroup   @relation(fields: [labGroupId], references: [groupId])

  @@index([studentId])
  @@index([JMBAG])
  @@index([email])
}

model classGroup {
  groupId   String    @id @default(cuid())
  groupName String    @unique
  teacher   Teacher   @relation(fields: [teacherId], references: [teacherId])
  teacherId String    @unique
  Students  Student[]

  @@index([groupName])
}

model labGroup {
  groupId   String    @id @default(cuid())
  groupName String    @unique
  teacher   Teacher?  @relation(fields: [teacherId], references: [teacherId])
  teacherId String?   @unique
  Students  Student[]

  @@index([groupName])
}

enum SystemRole {
  PROFESSOR
  ASSISTANT
  STUDENT
}
